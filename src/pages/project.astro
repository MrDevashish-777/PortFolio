---

import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import { Icon } from "astro-icon/components";
import projectsData from "@/data/projects.json";

// Blog section removed; all projects will be shown as main projects

// Enhanced projects data with additional sample projects
const enhancedProjects = [
  ...projectsData,
  {
    title: "Portfolio Website",
    description: "Modern, responsive portfolio website built with Astro, React, and Tailwind CSS featuring advanced animations and AI-powered chatbot.",
    tech: ["Astro", "React", "TypeScript", "Tailwind CSS", "Framer Motion"],
    link: "#",
    featured: true
  },
  {
    title: "E-Commerce Platform",
    description: "Full-stack e-commerce solution with payment integration, inventory management, and real-time analytics.",
    tech: ["Next.js", "Node.js", "MongoDB", "Stripe", "Socket.io"],
    link: "#"
  },
  {
    title: "Task Management App",
    description: "Collaborative task management application with real-time updates, file sharing, and team communication features.",
    tech: ["React", "Express.js", "PostgreSQL", "Redis", "WebSocket"],
    link: "#"
  }
];
---

<Layout title="Projects">
  <!-- Enhanced Projects Section -->
  <section class="py-20 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-40 right-20 w-64 h-64 bg-gradient-to-br from-purple-400/10 to-pink-400/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-40 left-20 w-80 h-80 bg-gradient-to-br from-blue-400/10 to-cyan-400/10 rounded-full blur-3xl"></div>
    </div>

    <Container>
      <div class="relative z-10">
        <!-- Enhanced Section Header -->
        <div class="text-center max-w-4xl mx-auto mb-20 animate-slide-up">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-purple-100 to-pink-100 text-purple-700 rounded-full font-medium mb-6">
            <Icon class="w-5 h-5" name="bx:bx-code-alt" />
            <span>My Work</span>
          </div>
          
          <h1 class="text-5xl lg:text-6xl font-bold lg:tracking-tight mb-6">
            <span class="gradient-text">Featured Projects</span>
          </h1>
          
          <p class="text-xl text-slate-600 leading-relaxed max-w-3xl mx-auto">
            A showcase of my technical expertise through innovative projects that solve real-world problems using cutting-edge technologies.
          </p>
          
          <div class="w-24 h-1 bg-gradient-to-r from-purple-500 to-pink-500 mx-auto mt-8 rounded-full"></div>
        </div>

        <!-- Enhanced Projects Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          {
            enhancedProjects.map((project, index) => (
              <ProjectCard
                title={project.title}
                description={project.description}
                tech={project.tech}
                link={project.link}
                featured={project.featured}
                delay={`${index * 0.1}s`}
              />
            ))
          }
        </div>

        <!-- Blog Projects Section removed; all projects are now main projects -->

        <!-- Call to Action -->
        <div class="text-center mt-20 animate-slide-up" style="animation-delay: 0.8s;">
          <div class="bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl p-8 text-white">
            <Icon class="w-12 h-12 mx-auto mb-4" name="bx:bx-rocket" />
            <h3 class="text-2xl font-bold mb-4">Ready to Start Your Project?</h3>
            <p class="text-lg mb-6 opacity-90">Let's collaborate and bring your ideas to life with cutting-edge technology.</p>
            <a 
              // ...existing code...
              class="inline-flex items-center gap-2 px-8 py-3 bg-white text-purple-600 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300 hover-scale"
            >
              <Icon class="w-5 h-5" name="bx:bx-envelope" />
              <span>Get In Touch</span>
            </a>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>
