---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import { Icon } from "astro-icon/components";
import heroImage from "@/assets/myself.jpeg";
import skillsData from "@/data/skills.json";

// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

const achievements = [
  { number: "3+", label: "Years Experience", icon: "bx:bx-time" },
  { number: "10+", label: "Projects Completed", icon: "bx:bx-code-alt" },
  { number: "5+", label: "Technologies Mastered", icon: "bx:bx-cog" },
  { number: "100%", label: "Client Satisfaction", icon: "bx:bx-happy" }
];

const timeline = [
  {
    year: "2024",
    title: "Advanced AI Projects",
    description: "Working on cutting-edge biometric authentication systems and forensic technology applications.",
    icon: "bx:bx-brain"
  },
  {
    year: "2023",
    title: "Full-Stack Development",
    description: "Mastered modern web development stack including React, Node.js, and cloud technologies.",
    icon: "bx:bx-code-alt"
  },
  {
    year: "2022",
    title: "Computer Science Journey",
    description: "Started my Computer Science and Engineering degree, focusing on AI and software development.",
    icon: "bx:bx-book"
  }
];
---

<Layout title="About">
  <!-- Enhanced About Section -->
  <section class="py-20 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 right-20 w-64 h-64 bg-gradient-to-br from-purple-400/10 to-pink-400/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 left-20 w-80 h-80 bg-gradient-to-br from-blue-400/10 to-cyan-400/10 rounded-full blur-3xl"></div>
    </div>

    <Container>

        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-2 gap-16 items-center mb-20">
          <!-- Profile Image -->
          <div class="animate-slide-up" style="animation-delay: 0.2s;">
            <div class="relative group">
              <div class="absolute -inset-4 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-2xl blur-lg opacity-20 group-hover:opacity-30 transition-opacity duration-300"></div>
              <div class="relative bg-white p-2 rounded-2xl shadow-2xl">
                <Picture
                  src={heroImage}
                  alt="T. Devashish Pillay"
                  widths={[400, 600, 800]}
                  sizes="(max-width: 800px) 100vw, 600px"
                  class="w-full rounded-xl object-cover"
                />
              </div>
            </div>
          </div>

          <!-- About Content -->
          <div class="space-y-6 animate-slide-up" style="animation-delay: 0.4s;">
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-6">
              Hi, I'm <span class="gradient-text">Devashish</span>
            </h2>
            <p class="text-lg leading-relaxed text-gray-600">
              Dedicated B.Tech CSE student with strong JavaScript and React fundamentals, passionate about open-source development and learning frameworks like Next.js. Experienced in building responsive web applications and contributing to real-world projects. Strong problem-solving, adaptability, and communication skills.
            </p>

            <!-- Skills Section -->
            <div class="mt-8">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Skills</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <h4 class="font-semibold mb-2 text-gray-800">Frontend</h4>
                  <p class="text-sm text-gray-600">React.js, JavaScript, HTML5, CSS3, Tailwind CSS</p>
                </div>
                <div>
                  <h4 class="font-semibold mb-2 text-gray-800">Backend</h4>
                  <p class="text-sm text-gray-600">Node.js, Express.js, Firebase, MongoDB, Supabase</p>
                </div>
                <div>
                  <h4 class="font-semibold mb-2 text-gray-800">App Development</h4>
                  <p class="text-sm text-gray-600">React Native, API Integration, Authentication</p>
                </div>
                <div>
                  <h4 class="font-semibold mb-2 text-gray-800">Open Source & Soft Skills</h4>
                  <p class="text-sm text-gray-600">Git, GitHub, Collaboration, Problem-Solving, Teamwork, Communication, Leadership</p>
                </div>
              </div>
            </div>

            <!-- Experience Section -->
            <div class="mt-10">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Experience</h3>
              <ul class="space-y-2 text-gray-700">
                <li><span class="font-bold">Live Project Member – Crypto Forensic Technology (Present):</span> Developing biometric security systems in a team environment.</li>
                <li><span class="font-bold">Web Development Intern – HOTIT Institute Pvt. Ltd (2024):</span> Built and maintained responsive React applications.</li>
                <li><span class="font-bold">Website Manager – Jain International School (Aug 2023 – Apr 2024):</span> Managed site via CPanel, improved UI/UX and features.</li>
              </ul>
            </div>

            <!-- Education Section -->
            <div class="mt-10">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Education</h3>
              <ul class="space-y-2 text-gray-700">
                <li><span class="font-bold">B.Tech CSE – S. B. Jain Institute of Technology, Management & Research, Nagpur (2022–2026):</span> GPA: 8.58/10</li>
                <li><span class="font-bold">Higher Secondary – Nirala Junior College:</span> 77.5%</li>
                <li><span class="font-bold">Secondary – Sri Chaitanya International Olympiad School:</span> 86.6%</li>
              </ul>
            </div>

            <!-- Projects Section -->
            <div class="mt-10">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Projects</h3>
              <ul class="space-y-2 text-gray-700">
                <li><span class="font-bold">BioSecure:</span> Biometric security system with CFT</li>
                <li><span class="font-bold">Down The Hell:</span> Pygame obstacle adventure game</li>
                <li><span class="font-bold">CodeFlex:</span> Event management website for IEEE</li>
                <li><span class="font-bold">GitHub Contributions:</span> Active repositories and pull requests</li>
              </ul>
            </div>

            <!-- Achievements / Positions Section -->
            <div class="mt-10">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Achievements / Positions</h3>
              <ul class="space-y-2 text-gray-700">
                <li>Technical Head – IEEE SBJITMR (2023–24)</li>
                <li>Vice President – Neev Forum (2022–23)</li>
                <li>Managed Jain International School website for 6 months</li>
                <li>Hackathon participation (IEEE, Code Tantra, etc.)</li>
              </ul>
            </div>

            <!-- Certifications Section -->
            <div class="mt-10">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Certifications</h3>
              <ul class="space-y-2 text-gray-700">
                <li>NPTEL – Design and Analysis of Algorithms (2024)</li>
              </ul>
            </div>

            <!-- Contact Section -->
            <div class="mt-10">
              <h3 class="text-2xl font-semibold text-indigo-500 mb-4">Contact</h3>
              <ul class="space-y-2 text-lg">
                <li><span class="font-bold">Email:</span> <a href="mailto:devashishpillay777@gmail.com" class="text-indigo-600 hover:underline">devashishpillay777@gmail.com</a></li>
                <li><span class="font-bold">Phone:</span> <a href="tel:+917499223329" class="text-indigo-600 hover:underline">+91 7499223329</a></li>
                <li><span class="font-bold">Location:</span> Nagpur, Maharashtra, India</li>
                <li><span class="font-bold">GitHub:</span> <a href="https://github.com/MrDevashish-777" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:underline">github.com/MrDevashish-777</a></li>
                <li><span class="font-bold">LinkedIn:</span> <a href="https://linkedin.com/in/devashish-pillay" target="_blank" rel="noopener noreferrer" class="text-indigo-600 hover:underline">linkedin.com/in/devashish-pillay</a></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Achievements Section -->
        <div class="bg-white rounded-2xl p-8 shadow-lg mb-20 animate-slide-up" style="animation-delay: 0.6s;">
          <h3 class="text-2xl font-bold text-center mb-8 gradient-text">Achievements & Milestones</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {achievements.map((achievement, index) => (
              <div class="text-center group hover-scale" style={`animation-delay: ${0.8 + index * 0.1}s;`}>
                <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                  <Icon class="w-8 h-8 text-white" name={achievement.icon} />
                </div>
                <div class="text-3xl font-bold text-gray-800 mb-2">{achievement.number}</div>
                <div class="text-sm text-gray-600">{achievement.label}</div>
              </div>
            ))}
          </div>
        </div>

        <!-- Timeline Section -->
        <div class="mb-20 animate-slide-up" style="animation-delay: 0.8s;">
          <h3 class="text-3xl font-bold text-center mb-12 gradient-text">My Journey</h3>
          <div class="max-w-4xl mx-auto">
            {timeline.map((item, index) => (
              <div class="flex gap-6 mb-8 last:mb-0 group">
                <div class="flex flex-col items-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <Icon class="w-6 h-6 text-white" name={item.icon} />
                  </div>
                  {index < timeline.length - 1 && (
                    <div class="w-0.5 h-16 bg-gradient-to-b from-purple-300 to-pink-300 mt-4"></div>
                  )}
                </div>
                <div class="flex-1 pb-8">
                  <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 hover-lift">
                    <div class="text-sm font-semibold text-purple-600 mb-2">{item.year}</div>
                    <h4 class="text-xl font-bold text-gray-800 mb-3">{item.title}</h4>
                    <p class="text-gray-600 leading-relaxed">{item.description}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Team Section (if available) -->
        {publishedTeamMembers.length > 0 && (
          <div class="animate-slide-up" style="animation-delay: 1s;">
            <h3 class="text-3xl font-bold text-center mb-12 gradient-text">Collaborations</h3>
            <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
              {publishedTeamMembers.map((teamMemberEntry, index) => (
                <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover-lift" style={`animation-delay: ${1.2 + index * 0.1}s;`}>
                  <div class="relative overflow-hidden">
                    <Picture
                      src={teamMemberEntry.data.avatar.src}
                      alt={teamMemberEntry.data.avatar.alt}
                      sizes="(max-width: 800px) 100vw, 400px"
                      width={400}
                      height={400}
                      class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  </div>
                  <div class="p-6 text-center">
                    <h4 class="text-lg font-bold text-gray-800 mb-2">{teamMemberEntry.data.name}</h4>
                    <p class="text-sm text-gray-600">{teamMemberEntry.data.title}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Call to Action -->
        <div class="text-center mt-20 animate-slide-up" style="animation-delay: 1.4s;">
          <div class="bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl p-8 text-white">
            <Icon class="w-12 h-12 mx-auto mb-4" name="bx:bx-chat" />
            <h3 class="text-2xl font-bold mb-4">Let's Connect!</h3>
            <p class="text-lg mb-6 opacity-90">I'm always excited to discuss new opportunities and innovative projects.</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                // ...existing code...
                class="inline-flex items-center gap-2 px-8 py-3 bg-white text-purple-600 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300 hover-scale"
              >
                <Icon class="w-5 h-5" name="bx:bx-envelope" />
                <span>Get In Touch</span>
              </a>
              <a 
                href="/project" 
                class="inline-flex items-center gap-2 px-8 py-3 bg-white/20 text-white rounded-xl font-semibold hover:bg-white/30 transition-all duration-300 hover-scale"
              >
                <Icon class="w-5 h-5" name="bx:bx-code-alt" />
                <span>View Projects</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>