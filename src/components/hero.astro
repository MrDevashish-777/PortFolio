---
import { Picture } from "astro:assets";
import heroImage from "@/assets/myself.jpeg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import { motion } from "framer-motion";
import AnimatedTagline from "@/components/AnimatedTagline";

---

<!-- Enhanced Hero Section with Modern Design -->
<main class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-blue-400 to-indigo-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-40 left-40 w-60 h-60 bg-gradient-to-br from-green-400 to-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-float" style="animation-delay: 4s;"></div>
  </div>

  <div class="relative z-10 grid lg:grid-cols-2 gap-12 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 max-w-7xl mx-auto px-4">
    <!-- Enhanced Profile Image Section -->
    <div class="py-6 md:order-1 animate-slide-up" style="animation-delay: 0.3s;">
      <div class="relative group">
        <!-- Glowing Ring Effect -->
        <div class="absolute -inset-4 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-full blur-lg opacity-30 group-hover:opacity-50 animate-pulse-glow"></div>
        
        <!-- Profile Image Container -->
        <div class="relative w-72 h-72 rounded-full overflow-hidden shadow-2xl border-4 border-white hover-lift">
          <Picture
            src={heroImage}
            alt="T. Devashish Pillay - Portfolio Photo"
            widths={[300, 600, 900]}
            sizes="(max-width: 800px) 100vw, 620px"
            loading="eager"
            format="avif"
            class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
          />
          
          <!-- Overlay Gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        
        <!-- Floating Elements -->
        <div class="absolute -top-4 -right-4 w-8 h-8 bg-yellow-400 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
        <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-green-400 rounded-full animate-bounce" style="animation-delay: 2s;"></div>
      </div>
    </div>

    <!-- Enhanced Text Content Section -->
    <div class="space-y-6 animate-slide-up">
      <!-- Main Title with Gradient Effect -->
      <div class="space-y-4">
        <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
          <span class="block gradient-text animate-gradient">T.Devashish</span>
          <span class="block text-gray-800 mt-2">Pillay</span>
        </h1>
        
        <!-- Animated Tagline -->
        <AnimatedTagline client:load />
        
        <!-- Enhanced Description -->
        <div class="relative">
          <p class="text-xl mt-6 text-slate-600 max-w-xl leading-relaxed animate-slide-up" style="animation-delay: 0.6s;">
            Crafting the future with 
            <span class="font-semibold text-purple-600">AI</span>, 
            <span class="font-semibold text-blue-600">Innovation</span>, and 
            <span class="font-semibold text-green-600">Code</span>
          </p>
          
          <!-- Decorative Line -->
          <div class="w-20 h-1 bg-gradient-to-r from-purple-500 to-pink-500 mt-4 rounded-full animate-scale-in" style="animation-delay: 0.8s;"></div>
        </div>
      </div>

      <!-- Enhanced Action Buttons -->
      <div class="mt-8 flex flex-col sm:flex-row gap-4 animate-slide-up" style="animation-delay: 1s;">
        <Link
          href="https://www.linkedin.com/in/devashish-pillay-2a3952257?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app"
          target="_blank"
          class="group relative overflow-hidden bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 hover-lift flex items-center justify-center gap-3 shadow-lg"
          rel="noopener">
          <Icon class="w-5 h-5 group-hover:scale-110 transition-transform" name="bx:bxl-linkedin" />
          <span>LinkedIn</span>
          <div class="absolute inset-0 bg-white/20 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700 skew-x-12"></div>
        </Link>
        
        <Link
          href="https://github.com/MrDevashish-777"
          target="_blank"
          class="group relative overflow-hidden bg-gray-900 hover:bg-gray-800 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 hover-lift flex items-center justify-center gap-3 shadow-lg"
          rel="noopener">
          <Icon class="w-5 h-5 group-hover:scale-110 transition-transform" name="bx:bxl-github" />
          <span>GitHub</span>
          <div class="absolute inset-0 bg-white/10 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700 skew-x-12"></div>
        </Link>
      </div>

      <!-- Stats Section -->
      <div class="mt-12 grid grid-cols-3 gap-6 animate-slide-up" style="animation-delay: 1.2s;">
        <div class="text-center group hover-scale">
          <div class="text-3xl font-bold text-purple-600 mb-1">5+</div>
          <div class="text-sm text-gray-600">Projects</div>
        </div>
        <div class="text-center group hover-scale">
          <div class="text-3xl font-bold text-blue-600 mb-1">3+</div>
          <div class="text-sm text-gray-600">Years Experience</div>
        </div>
        <div class="text-center group hover-scale">
          <div class="text-3xl font-bold text-green-600 mb-1">10+</div>
          <div class="text-sm text-gray-600">Technologies</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</main>
