---
import { Picture } from "astro:assets";
import heroImage from "@/assets/myself.jpeg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
import { motion } from "framer-motion";
import AnimatedTagline from "@/components/AnimatedTagline";

---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <div class="w-58 h-58 rounded-full overflow-hidden shadow-md border-4 border-white dark:border-gray-700">
  <Picture
    src={heroImage}
    alt="My Portfolio Photo"
    widths={[200, 400, 600]}
    sizes="(max-width: 800px) 100vw, 620px"
    loading="eager"
    format="avif"
    class="object-cover w-full h-full"
  />
</div>

  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      T.Devashish Pillay
    </h1>
    <AnimatedTagline />
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      AI Enthusiast | Developer | Innovator
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://www.linkedin.com/in/devashish-pillay-2a3952257?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-linkedin" />

        Linkdin
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/MrDevashish-777"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub
      </Link>
    </div>
  </div>
</main>
