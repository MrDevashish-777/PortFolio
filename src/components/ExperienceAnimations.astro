<script>
  // Enhanced scroll animations for experience page
  function initExperienceAnimations() {
    // Intersection Observer for staggered animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          // Add staggered delay based on element index
          setTimeout(() => {
            entry.target.classList.add('animate-in');
            entry.target.style.animationPlayState = 'running';
          }, index * 100);
        }
      });
    }, observerOptions);

    // Observe experience cards
    document.querySelectorAll('.experience-item').forEach((el, index) => {
      el.style.animationPlayState = 'paused';
      el.style.setProperty('--animation-delay', `${index * 0.2}s`);
      observer.observe(el);
    });

    // Timeline dot animations
    const timelineDots = document.querySelectorAll('.timeline-dot');
    timelineDots.forEach((dot, index) => {
      setTimeout(() => {
        dot.classList.add('animate-pulse');
      }, (index + 1) * 500);
    });

    // Parallax effect for background elements
    function handleParallax() {
      const scrolled = window.pageYOffset;
      const parallaxElements = document.querySelectorAll('.parallax-bg');
      
      parallaxElements.forEach((element) => {
        const speed = element.dataset.speed || 0.5;
        const yPos = -(scrolled * speed);
        element.style.transform = `translateY(${yPos}px)`;
      });
    }

    // Magnetic effect for interactive elements
    function addMagneticEffect() {
      const magneticElements = document.querySelectorAll('.magnetic');
      
      magneticElements.forEach(element => {
        element.addEventListener('mousemove', (e) => {
          const rect = element.getBoundingClientRect();
          const x = e.clientX - rect.left - rect.width / 2;
          const y = e.clientY - rect.top - rect.height / 2;
          
          const distance = Math.sqrt(x * x + y * y);
          const maxDistance = 100;
          
          if (distance < maxDistance) {
            const strength = (maxDistance - distance) / maxDistance;
            const moveX = x * strength * 0.2;
            const moveY = y * strength * 0.2;
            
            element.style.transform = `translate(${moveX}px, ${moveY}px) scale(${1 + strength * 0.05})`;
          }
        });

        element.addEventListener('mouseleave', () => {
          element.style.transform = 'translate(0px, 0px) scale(1)';
        });
      });
    }

    // Smooth reveal animations
    function revealOnScroll() {
      const reveals = document.querySelectorAll('.reveal');
      
      reveals.forEach(element => {
        const elementTop = element.getBoundingClientRect().top;
        const elementVisible = 150;
        
        if (elementTop < window.innerHeight - elementVisible) {
          element.classList.add('revealed');
        }
      });
    }

    // Enhanced hover effects for experience cards
    function addCardHoverEffects() {
      const cards = document.querySelectorAll('.experience-card');
      
      cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          // Add glow effect
          card.style.boxShadow = '0 25px 50px -12px rgba(99, 102, 241, 0.25)';
          
          // Animate bullets
          const bullets = card.querySelectorAll('li');
          bullets.forEach((bullet, index) => {
            setTimeout(() => {
              bullet.style.transform = 'translateX(5px)';
              bullet.style.color = 'rgb(99, 102, 241)';
            }, index * 50);
          });
        });

        card.addEventListener('mouseleave', () => {
          card.style.boxShadow = '';
          
          const bullets = card.querySelectorAll('li');
          bullets.forEach(bullet => {
            bullet.style.transform = 'translateX(0px)';
            bullet.style.color = '';
          });
        });
      });
    }

    // Initialize all effects
    addMagneticEffect();
    addCardHoverEffects();
    
    // Throttled scroll handler
    let ticking = false;
    function handleScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          handleParallax();
          revealOnScroll();
          ticking = false;
        });
        ticking = true;
      }
    }

    window.addEventListener('scroll', handleScroll);
    
    // Initial call
    revealOnScroll();
  }

  // Initialize when DOM is loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initExperienceAnimations);
  } else {
    initExperienceAnimations();
  }

  // Re-initialize on page transitions (for SPA behavior)
  document.addEventListener('astro:page-load', initExperienceAnimations);
</script>

<style>
  /* Additional styles for enhanced animations */
  .animate-in {
    animation-play-state: running !important;
  }

  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .reveal.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  .parallax-bg {
    will-change: transform;
  }

  .magnetic {
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  /* Enhanced timeline animations */
  .timeline-line {
    position: relative;
    overflow: hidden;
  }

  .timeline-line::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 0;
    background: inherit;
    animation: timeline-grow 2s ease-out 0.5s forwards;
  }

  @keyframes timeline-grow {
    to {
      height: 100%;
    }
  }

  /* Glowing dots */
  .timeline-dot {
    position: relative;
  }

  .timeline-dot::after {
    content: '';
    position: absolute;
    inset: -10px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.3) 0%, transparent 70%);
    opacity: 0;
    animation: dot-glow 2s ease-in-out infinite;
  }

  @keyframes dot-glow {
    0%, 100% {
      opacity: 0;
      transform: scale(0.8);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  /* Card shimmer effect */
  .experience-card {
    position: relative;
    overflow: hidden;
  }

  .experience-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.5s;
  }

  .experience-card:hover::before {
    left: 100%;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .timeline-line {
      display: none;
    }
    
    .timeline-dot {
      position: relative;
      left: auto;
      transform: none;
    }
  }
</style>