---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Icon } from "astro-icon/components";


  {
    title: "Skills",
    path: "#skills",
    icon: "bx:bx-code-alt"
  },
  {
    title: "About Me",
    path: "/about",
    icon: "bx:bx-user"
  },
  {
    title: "Projects",
    path: "/project",
    icon: "bx:bx-briefcase"
  },
  {
    title: "Contact",
    path: "/contact",
    icon: "bx:bx-envelope"
  },
];
---

<!-- Enhanced Navbar with Glass Effect -->
<nav class="fixed top-0 left-0 right-0 z-50 glass-effect backdrop-blur-md border-b border-white/20 animate-slide-up">
  <Container>
    <header class="flex flex-col lg:flex-row justify-between items-center py-4">
      <Astronav>
        <!-- Enhanced Logo -->
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/" class="group flex items-center gap-3 hover-scale">
            <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300">
              <span class="text-white font-bold text-lg">D</span>
            </div>
            <div class="hidden sm:block">
              <span class="font-bold text-xl bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">Devashish</span>
              <div class="text-sm text-gray-500 -mt-1">Portfolio</div>
            </div>
          </a>
          
          <!-- Enhanced Mobile Menu Button -->
          <div class="block lg:hidden">
            <div class="p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200">
              <MenuIcon class="w-6 h-6 text-gray-800" />
            </div>
          </div>
        </div>
        
        <!-- Enhanced Navigation Menu -->
        <MenuItems class="hidden w-full lg:w-auto mt-4 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-2 space-y-2 lg:space-y-0">
            {
              menuitems.map((item, index) => (
                <li class="animate-slide-up" style={`animation-delay: ${(index + 1) * 0.1}s;`}>
                  <a
                    href={item.path}
                    class="group flex items-center gap-2 px-4 py-2 rounded-xl text-gray-600 hover:text-gray-900 hover:bg-white/50 transition-all duration-300 font-medium relative overflow-hidden"
                  >
                    <!-- Icon -->
                    <Icon class="w-4 h-4 group-hover:scale-110 transition-transform duration-200" name={item.icon} />
                    
                    <!-- Text -->
                    <span class="relative z-10">{item.title}</span>
                    
                    <!-- Hover Effect -->
                    <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 to-pink-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
                    
                    <!-- Active Indicator -->
                    <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-500 to-pink-500 group-hover:w-8 transition-all duration-300 rounded-full"></div>
                  </a>
                </li>
              ))
            }
            
            <!-- CTA Button -->
            <li class="animate-slide-up" style="animation-delay: 0.6s;">
              <a
                href="#contact"
                class="group flex items-center gap-2 px-6 py-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300 hover-scale ml-4"
              >
                <Icon class="w-4 h-4 group-hover:rotate-12 transition-transform duration-200" name="bx:bx-rocket" />
                <span>Let's Talk</span>
                
                <!-- Shine Effect -->
                <div class="absolute inset-0 bg-white/20 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700 skew-x-12 rounded-xl"></div>
              </a>
            </li>
          </ul>
        </MenuItems>
      </Astronav>
    </header>
  </Container>
</nav>

<!-- Spacer to prevent content from hiding behind fixed navbar -->
<div class="h-20"></div>
