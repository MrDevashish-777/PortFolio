const ld = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: author || "T. Devashish Pillay",
  url: site || url || "https://your-site.com",
  jobTitle: "Full-Stack Developer",
  email: "devashishp.cse22@sbjit.edu.in",
  telephone: "+91 7499223329",
  sameAs: [
    "https://github.com/MrDevashish-777",
